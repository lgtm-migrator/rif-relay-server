  "scripts": {
    "build": "tsc",
    "debug": "ts-node src/commands/Start.ts",
    "format": "npx prettier test/*.ts src/*.ts src/**/*.ts !.gitignore  --list-different",
    "format:fix": "npm run format -- --write",
    "lint": "npx eslint --cache test/**/*.ts src/*.ts src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "register": "scripts/register",
    "start": "scripts/start",
    "tdd": "mocha -r ts-node/register --extensions ts --watch --watch-files src,test 'test/**/*.{test,spec}.ts'",
    "test": "mocha -r ts-node/register --extensions ts 'test/**/*.{test,spec}.ts'"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "package.json": "npx sort-package-json"
  },
