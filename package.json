{
  "name": "rif-relay-server",
  "version": "0.0.2-alpha.1",
  "description": "This project contains all the server code for the rif relay system.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier src/**/**/*.ts src/**/*.ts !.gitignore --write",
    "lint": "eslint src/**/*.ts src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts src/**/*.ts --fix",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "tdd": "mocha -r ts-node/register --extensions ts --watch --watch-files src,test 'test/**/*.{test,spec}.ts'",
    "test": "mocha -r ts-node/register --extensions ts 'test/**/*.{test,spec}.ts'",
    "start": "scripts/start",
    "register": "scripts/register",
    "debug": "ts-node src/commands/Start.ts --config server-config.json"
  },
  "author": "Relaying Services Team",
  "license": "MIT",
  "dependencies": {
    "@ethersproject/providers": "^5.7.1",
    "@metamask/eth-sig-util": "^4.0.1",
    "async-mutex": "^0.4.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "i": "^0.3.7",
    "jsonrpc-lite": "^2.2.0",
    "loglevel": "^1.8.0",
    "minimist": "^1.2.6",
    "nedb-async": "^0.1.6",
    "npm": "^8.19.2",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^9.1.1",
    "@types/nedb": "^1.8.12",
    "@types/node": "^18.7.18",
    "@types/sinon": "^10.0.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "ethers": "5.7.0",
    "typescript": "4.8.2"
  }
}
